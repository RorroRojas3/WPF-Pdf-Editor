<Window x:Class="PDFEditor.SplitPDFForms.SplitPDFMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFEditor.SplitPDFForms"
        mc:Ignorable="d"
        Title="SplitPDF" Height="306" Width="332" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="ExtractPDFButton" Content="Extract pages" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Click="ExtractPDFButton_Click"/>
        <Button x:Name="SplitPDFByCustomeRangeButton" Content="Split pages by custom range" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Click="SplitPDFByCustomRangeButton_Click"/>
        <Button x:Name="SplitPDFByFixedRangeButton" Content="Split pages by fixed range" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Click="SplitPDFByFixedRangeButton_Click"/>
    </Grid>
</Window>
